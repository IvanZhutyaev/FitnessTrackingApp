<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTrackingApp.Pages.ChatModal"
             Title="Фитнес-тренер AI"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#2E7D32</Color>
            <Color x:Key="SecondaryColor">#81C784</Color>
            <Color x:Key="UserMessageColor">#E3F2FD</Color>
            <Color x:Key="BotMessageColor">#E8F5E9</Color>
            <Color x:Key="PageBackgroundColor">#F5F5F5</Color>
            <Color x:Key="TextColor">#212121</Color>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource TextColor}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="12,8"/>
            </Style>

            <Style TargetType="Frame">
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HasShadow" Value="False"/>
                <Setter Property="Margin" Value="8,4"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="16,8"/>
            </Style>

            <Style TargetType="Entry">
                <Setter Property="PlaceholderColor" Value="#9E9E9E"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="{DynamicResource TextColor}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="HeightRequest" Value="40"/>
                <Setter Property="Margin" Value="0,0,8,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto,Auto" Padding="10">
        <ScrollView x:Name="ScrollView" Grid.Row="0">
            <StackLayout x:Name="ChatStack" Spacing="4" Padding="0,0,0,10"/>
        </ScrollView>

        <!-- Поле ввода -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="8" Padding="0,8">
            <Entry x:Name="UserInput" 
                   Placeholder="Введите ваш вопрос..." 
                   Grid.Column="0"
                   Completed="SendButton_Clicked"/>

            <Button Text="➤" 
                    Grid.Column="1"
                    WidthRequest="50"
                    Clicked="SendButton_Clicked"
                    BackgroundColor="{DynamicResource PrimaryColor}"/>
        </Grid>

        <Button Text="Закрыть" 
                Grid.Row="2"
                Margin="0,8"
                Clicked="CloseButton_Clicked"
                BackgroundColor="{DynamicResource SecondaryColor}"/>
    </Grid>
</ContentPage>